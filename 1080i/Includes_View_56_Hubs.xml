            <height>285</height>
            <visible>Control.IsVisible(56)</visible>
            <include>Viewtype_Info_Right</include>
            <visible>Integer.IsGreater(Container(560).NumItems,0)</visible>
        </include>
        <control type="group">
            <visible>Control.IsVisible(56)</visible>
            <include>Animation_Down</include>
